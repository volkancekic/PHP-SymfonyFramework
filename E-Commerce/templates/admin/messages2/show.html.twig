{% block body %}
    <h1>Mesajlar</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ messages2.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ messages2.name }}</td>
            </tr>
