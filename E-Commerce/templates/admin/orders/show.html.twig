<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{% block title %}{% endblock %}</title>
    <!-- BOOTSTRAP STYLES-->
    <link href="{{ asset('admin') }}/assets/css/bootstrap.css" rel="stylesheet" />
    <!-- FONTAWESOME STYLES-->
    <link href="{{ asset('admin') }}/assets/css/font-awesome.css" rel="stylesheet" />
    <!-- CUSTOM STYLES-->
    <link href="{{ asset('admin') }}/assets/css/custom.css" rel="stylesheet" />
    <!-- GOOGLE FONTS-->
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

    <SCRIPT language="JavaScript" type="text/javascript">
        function openWin( windowURL, windowName, windowFeatures ) { window.open( windowURL, windowName, windowFeatures ); }
    </SCRIPT>
    <script src="https://cdn.ckeditor.com/ckeditor5/11.1.1/classic/ckeditor.js"></script>
    <!-- JQUERY SCRIPTS -->
    <script src="{{ asset('admin') }}/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="{{ asset('admin') }}/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="{{ asset('admin') }}/assets/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="{{ asset('admin') }}/assets/js/custom.js"></script>


</head>



<div class="panel-body">
    <div class="table-responsive">

    <table class="table">
        {{ include('admin/messages.html.twig') }}
        <tbody>
        <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
        <form role="form" action="{{ path('admin_orders_update', {'id': order.id}) }}" method="post">
            <tr>
                <th>Shipinfo</th>
                <td><textarea name="shipinfo" cols="100" rows="3">{{ order.shipinfo }} </textarea></td>
            </tr>
            <tr>
                <th>Note</th>
                <td><textarea name="note" cols="100" rows="3"> {{ order.note }} </textarea></td>
            </tr>
            <tr>
            <th>Durum</th>
            <td><select name="status">
                    <option>{{ order.status }}</option>
                    <option>Accepted</option>
                    <option>InShipping</option>
                    <option>Cancelled</option>
                    <option>Completed</option>
                </select>
                <input type="submit" class="btn btn-success btn-md" value="GÜNCELLE">
            </td>

            </tr>

        </form>

        </tbody>
    </table>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Ürün Adı</th>
                    <th>Satış Fiyatı</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th>Durum</th>

                </tr>
                </thead>
                <tbody>
                {% set total=0 %}
                {% for rs in orderdetail %}
                    <tr>
                        <td>{{ rs.id }}</td>
                        <td>{{ rs.name }}</td>
                        <td>{{ rs.price }} ₺</td>
                        <td>{{ rs.quantity }} Adet</td>
                        <td>{{ rs.amount }} ₺</td>
                        <td>{{ rs.status }}</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">Kayıt Bulunamadı.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>





        </div>
</div>




