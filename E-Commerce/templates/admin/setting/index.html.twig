{% extends 'base.html.twig' %}

{% block title %}Ayarlar{% endblock %}

{% block body %}
    <h1>Ayarlar</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Keywords</th>
                <th>Company</th>
                <th>Address</th>
                <th>Fax</th>
                <th>Phone</th>
                <th>Email</th>
                <th>Smtpserver</th>
                <th>Smtpemail</th>
                <th>Smtppassw</th>
                <th>Smtpport</th>
                <th>Aboutus</th>
                <th>Contact</th>
                <th>Referances</th>
                <th>Status</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for setting in settings %}
            <tr>
                <td>{{ setting.id }}</td>
                <td>{{ setting.title }}</td>
                <td>{{ setting.description }}</td>
                <td>{{ setting.keywords }}</td>
                <td>{{ setting.company }}</td>
                <td>{{ setting.address }}</td>
                <td>{{ setting.fax }}</td>
                <td>{{ setting.phone }}</td>
                <td>{{ setting.email }}</td>
                <td>{{ setting.smtpserver }}</td>
                <td>{{ setting.smtpemail }}</td>
                <td>{{ setting.smtppassw }}</td>
                <td>{{ setting.smtpport }}</td>
                <td>{{ setting.aboutus }}</td>
                <td>{{ setting.contact }}</td>
                <td>{{ setting.referances }}</td>
                <td>{{ setting.status }}</td>
                <td>
                    <a href="{{ path('admin_setting_show', {'id': setting.id}) }}">Göster</a>
                    <a href="{{ path('admin_setting_edit', {'id': setting.id}) }}">Düzenle</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="18">Kayıt Bulunamadı.</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_setting_new') }}">Yeni Oluştur</a>
{% endblock %}
