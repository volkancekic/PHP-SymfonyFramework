{% extends 'adminbase.html.twig' %}

{% block title %}Ayarlar Düzenleme{% endblock %}

{% block content %}




            <div class="row">
                <div class="col-md-12 col-sm-12">
                    <div class="panel panel-default">
                        {{ include('admin/messages.html.twig') }}
                        <div class="panel-heading">
                            Ayarlar
                        </div>

                        <form role="form" method="post">
                        <div class="panel-body">
                            <ul class="nav nav-tabs">
                                <li class="active"><a href="#home" data-toggle="tab">Genel Bilgiler</a>
                                </li>
                                <li class=""><a href="#profile" data-toggle="tab">Email Server</a>
                                </li>
                                <li class=""><a href="#messages" data-toggle="tab">Hakkımızda</a>
                                </li>
                                <li class=""><a href="#settings" data-toggle="tab">İletişim</a>
                                </li>
                                <li class=""><a href="#settings2" data-toggle="tab">Referanslar</a>
                                </li>
                            </ul>

                            <div class="tab-content">
                                <div class="tab-pane fade active in" id="home">
                                    <h4></h4>
                                    <div class="form-group">
                                        <label>Adı</label>
                                        <input type="text" name="setting[title]" value="{{ setting.title }}" class="form-control"
                                               placeholder="Adı"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Anahtar Kelimeler</label>
                                        <input type="text" name="setting[keywords]" value="{{ setting.keywords }}" class="form-control"
                                               placeholder="Anahtar Kelimeler"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Kısa Açıklama</label>
                                        <input type="text" name="setting[description]" value="{{ setting.description }}" class="form-control"
                                               placeholder="Kısa Açıklama"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Firma Adı</label>
                                        <input type="text" name="setting[company]" value="{{ setting.company }}" class="form-control"
                                               placeholder="Firma Adı"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Adresi</label>
                                        <input type="text" name="setting[address]" value="{{ setting.address }}" class="form-control"
                                               placeholder="Adresi"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Fax</label>
                                        <input type="text" name="setting[fax]" value="{{ setting.fax }}" class="form-control"
                                               placeholder="Fax"/>
                                    </div>
                                    <div class="form-group">
                                        <label>Durum</label>
                                        <select name="setting[status]" class="form-control">
                                            <option>{{ setting.status }}</option>
                                            <option>True</option>
                                            <option>False</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="profile">
                                    <h4></h4>
                                    <div class="form-group">
                                        <label>Email Server</label>
                                        <input type="text" name="setting[smtpserver]" value="{{ setting.smtpserver }}" class="form-control"
                                               placeholder="Email Server"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="text" name="setting[smtpemail]" value="{{ setting.smtpemail }}" class="form-control"
                                               placeholder="Email"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>Email Şifre</label>
                                        <input type="text" name="setting[smtppassw]" value="{{ setting.smtppassw }}" class="form-control"
                                               placeholder="Email Şifre"/>
                                    </div>
                                    <br>
                                    <div class="form-group">
                                        <label>SMTP Port</label>
                                        <input type="text" name="setting[smtpport]" value="{{ setting.smtpport }}" class="form-control"
                                               placeholder="SMTP Port"/>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="messages">
                                    <h4></h4>
                                    <div class="form-group">
                                        <label>Hakkımızda</label>
                                        <textarea id="detail" name="setting[aboutus]" rows="10" cols="100">{{ setting.aboutus }}</textarea>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="settings">
                                    <h4></h4>
                                    <div class="form-group">
                                        <label>İletişim</label>
                                        <textarea id="contact" name="setting[contact]" rows="10" cols="100">{{ setting.contact }}</textarea>
                                    </div>
                                </div>
                                <div class="tab-pane fade" id="settings2">
                                    <h4></h4>
                                    <div class="form-group">
                                        <label>Referanslar</label>
                                        <textarea id="referances" name="setting[referances]" rows="10" cols="100">{{ setting.referances }}</textarea>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

            <button type="submit" class="btn btn-success btn-lg">Kaydet</button>

                </div>
            </div>

        </form>

    <!-- /. PAGE WRAPPER  -->
    </div>
    <!-- /. WRAPPER  -->
    <!-- SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME-->
    <!-- JQUERY SCRIPTS -->
    <script src="admin/assets/js/jquery-1.10.2.js"></script>
    <!-- BOOTSTRAP SCRIPTS -->
    <script src="admin/assets/js/bootstrap.min.js"></script>
    <!-- METISMENU SCRIPTS -->
    <script src="admin/assets/js/jquery.metisMenu.js"></script>
    <!-- CUSTOM SCRIPTS -->
    <script src="admin/assets/js/custom.js"></script>


    </body>
    </html>
{% endblock %}