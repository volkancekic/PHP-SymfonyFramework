{% extends 'frontbase.html.twig' %}


{% block title %} iletisim {{ data[0].title }} {% endblock %}
{% block keywords %} {{ data[0].keywords }} {% endblock %}
{% block description %} {{ data[0].description }} {% endblock %}
{% block content %}

    <div class="row">
        <div class="span12">
            <div class="row">
                <div class="span12">
                    <h3 class="title">  İLETİŞİM </h3>
                    <p>
                        {{ data[0].contact|raw }}
                    </p>

                </div>
            </div>
        </div>
    </div>

<div class="row">
    <div class="span12">
        <div class="row">
            <div class="span12">
                <hr>

                <h1>Bizimle İletişime Geçin</h1>

                <form role="form" method="post">
                    {{ include('messages.html.twig') }}
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" name="messages2[name]" class="form-control" placeholder="Name" />
                    </div>
                    <div class="form-group">
                        <label>E-Mail</label>
                        <input type="email" name="messages2[email]"  class="form-control"  placeholder="Email" />
                    </div>
                    <div class="form-group">
                        <label>Subject</label>
                        <input type="text" name="messages2[subject]"  class="form-control" placeholder="Subject"/>
                    </div>
                    <div class="form-group">
                        <label>Message</label>
                        <textarea  name="messages2[message]" rows="3" cols="4"></textarea>
                    </div>
                    <br><br>
                    <input type="hidden" name="token" value="{{ csrf_token('form-message') }}" />
                    <button type="submit" class="btn btn-success btn-lg">Mesajı Gönder</button>



                </form>



            </div>
        </div>
    </div>
</div>
{% endblock %}
