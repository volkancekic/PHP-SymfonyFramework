{% extends 'frontbase.html.twig' %}


{% block title %} Siparişlerim Detay {% endblock %}

{% block content %}



<section class="main-content">
    <div class="row">
        <div class="span9">
            <h4>Siparişlerim Detay</h4>
            {{ include('messages.html.twig') }}

            <table class="table">
                <thead>
                <tr>
                <th>Id</th>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <th>Userid</th>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <th>Amount</th>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ order.address }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <th>Shipinfo</th>
                <td>{{ order.shipinfo }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ order.status }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ order.note }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ order.updatedAt ? order.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ order.createdAt ? order.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Ürün Adı</th>
                    <th>Satış Fiyatı</th>
                    <th>Miktar</th>
                    <th>Toplam</th>
                    <th>Durum</th>

                </tr>
                </thead>
                <tbody>
                {% set total=0 %}
                {% for rs in orderdetail %}
                    <tr>
                        <td>{{ rs.id }}</td>
                        <td>{{ rs.name }}</td>
                        <td>{{ rs.price }} ₺</td>
                        <td>{{ rs.quantity }} Adet</td>
                        <td>{{ rs.amount }} ₺</td>
                        <td>{{ rs.status }}</td>

                    </tr>
                {% else %}
                    <tr>
                        <td colspan="10">Kayıt Bulunamadı.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>





        </div>
    </div>






    <script src="{{ asset('assets') }}/js/common.js"></script>

</section>

{% endblock %}
